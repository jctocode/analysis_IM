set style line 1 lt 1 lw 4 linecolor rgb "blue"
set style line 2 lt 1 lw 4 linecolor rgb "green"
set style line 3 lt 1 lw 4 linecolor rgb "red"
set style line 4 lt 1 lw 4 linecolor rgb "black"
set style line 5 lt 1 lw 4 linecolor rgb "purple"
set style line 6 lt 1 lw 4 linecolor rgb "gray"
set style line 7 lt 1 lw 4 linecolor rgb "black"
set style line 8 lt 2 lw 2 linecolor rgb "black"
set style line 9 lt 3 lw 4 linecolor rgb "black"
set style line 10 lt 2 lw 2 linecolor rgb "red"

set size 1., 1.
set terminal postscript eps enhanced color "Helvetica" 20
set logscale
set xlabel "|k| (h cMpc^{-1})"
set ylabel "{/Symbol D}(k)^2 (K)"
set title "TITLE"
set key at screen 0.5, 0.85
set yrange [1e-6: 1e-3]
set xrange [0.08: 1.1]
set output "gbt_x_wigglez/VARIANTALTTAG.eps"
plot "SIMKEY_xWigglez/SIMKEY_xWigglez_avg_from2d.dat" using 2:($5*0.33):($5*0.47) notitle with filledcu ls 6,\
     "SIMKEY_xWigglez/SIMKEY_xWigglez_avg_from2d.dat" using 2:($5*0.4) t "{/Helvetica=13 sim. {/Symbol W}_{HI} = 4 10^{-4}}" with lines ls 8, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_15modes.dat" using 2:($6-$7):($8) t "{/Helvetica=13 15 modes}" with yerrorbars ls 1, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_25modes.dat" using 2:($6-$7):($8) t "{/Helvetica=13 25 modes}" with yerrorbars ls 2, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_50modes.dat" using 2:($6-$7):($8) t "{/Helvetica=13 50 modes}" with yerrorbars ls 3, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_75modes.dat" using 2:($6-$7):($8) t "{/Helvetica=13 75 modes}" with yerrorbars ls 4, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_100modes.dat" using 2:($6-$7):($8) t "{/Helvetica=13 100 modes}" with yerrorbars ls 5

set ylabel "Error on {/Symbol D}(k)^2 (K)"
set title "TITLE, errors"
set yrange [*: *]
set output "gbt_x_wigglez/VARIANT_errorsALTTAG.eps"
plot "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_15modes.dat" using 2:8 t "{/Helvetica=13 15 modes}" with lines ls 1, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_25modes.dat" using 2:8 t "{/Helvetica=13 25 modes}" with lines ls 2, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_50modes.dat" using 2:8 t "{/Helvetica=13 50 modes}" with lines ls 3, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_75modes.dat" using 2:8 t "{/Helvetica=13 75 modes}" with lines ls 4, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_100modes.dat" using 2:8 t "{/Helvetica=13 100 modes}" with lines ls 5

unset logscale y
set ylabel "Fractional error on {/Symbol D}(k)^2 (K)"
set title "TITLE, frac. errors"
set yrange [*: *]
set output "gbt_x_wigglez/VARIANT_fracerrorsALTTAG.eps"
plot "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_15modes.dat" using 2:($8/($6-$7)) t "{/Helvetica=13 15 modes}" with lines ls 1, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_25modes.dat" using 2:($8/($6-$7)) t "{/Helvetica=13 25 modes}" with lines ls 2, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_50modes.dat" using 2:($8/($6-$7)) t "{/Helvetica=13 50 modes}" with lines ls 3, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_75modes.dat" using 2:($8/($6-$7)) t "{/Helvetica=13 75 modes}" with lines ls 4, \
     "VARIANT_combined_xWigglezALTTAG/VARIANT_combined_xWigglezALTTAG_100modes.dat" using 2:($8/($6-$7)) t "{/Helvetica=13 100 modes}" with lines ls 5

